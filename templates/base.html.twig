<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}BurnNote{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {# {{ encore_entry_link_tags('app') }} #}
            <link href="{{ asset('css/style.css') }}" rel="stylesheet">
            <link href="{{ asset('css/responsive.css') }}" rel="stylesheet">
        {% endblock %}

        {% block javascripts %}
            {# {{ encore_entry_script_tags('app') }} #}
        {% endblock %}
    </head>
    <body>
        <div id="title">
          <h1><a href="{{ path('note_index') }}">Burn-notes</a></h1>
          <lottie-player id="fire-lottie" src="https://assets1.lottiefiles.com/private_files/lf30_kdxnzxlb.json" background="transparent" speed="1" loop autoplay></lottie-player>
        </div>
        {% block body %}{% endblock %}
        {# Ressources #}
        <style>
          @import url('https://fonts.googleapis.com/css2?family=Dosis:wght@700&display=swap');
          @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap');
        </style>
        <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
    </body>
</html>
