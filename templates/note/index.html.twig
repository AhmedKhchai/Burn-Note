{% extends 'base.html.twig' %}

{% block title %}Burn-Notes !{% endblock %}

{% block body %}
  {% if notes %}
  <section class="list-categories">
      {% for category in categories %}
          <a href="{{ path('note_category_index', {'id': category.id})}}" class="pill-button">
          {{ category.name | capitalize  }}
          </a>
        {% endfor %}
  </section>
    <section class="notes-container">
      {% for note in notes %}
        <a href="{{ path('show_note', {'id': note.id}) }}">
          <div class="note {{ note.id ? 'new-note' : '' }}">
            <h2>{{ note.title }}</h2>
            <p>{{ note.content|slice(0,100)|raw }}</p>
          </div>
        </a>
      {% endfor %}
    </section>
  {% else %}
    <span>Aucune notes</span>
  {% endif %}
  <a class="note-button" href="{{ path('note_create') }}">
